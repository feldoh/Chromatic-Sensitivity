<?xml version="1.0" encoding="utf-8"?>

<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Biomes! Oasis</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>Defs/BiomeDef[defName="BMT_ChromaticOasis"]/diseases</xpath>
      <value>
        <diseaseInc>Taggerung_Disease_ChromaticSensitivity</diseaseInc>
        <commonality>50</commonality>
      </value>
    </match>
  </Operation>
</Patch>
