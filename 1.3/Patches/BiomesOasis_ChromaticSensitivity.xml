<?xml version="1.0" encoding="utf-8" ?>

<Patch>
  <Operation Class="PatchOperationFindMod">
    <success>Always</success>
    <mods>
      <li>Biomes! Oasis</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationAdd">
          <xpath>Defs/BiomeDef[defName="BMT_ChromaticOasis"]/diseases</xpath>
          <value>
            <li>
              <diseaseInc>Taggerung_Disease_ChromaticSensitivity</diseaseInc>
              <commonality>50</commonality>
            </li>
          </value>
        </li>
      </operations>
    </match>
    <nomatch/>
  </Operation>
</Patch>
